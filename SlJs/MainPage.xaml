<UserControl x:Class="CamGaze.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="500" d:DesignWidth="700">

    <Grid x:Name="LayoutRoot" Background="White">

        <WebBrowser x:Name="browser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,40" />
        <Grid x:Name="StatusGrid" Background="Yellow" >
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Orientation="Horizontal">
                <Button x:Name= "LobBrowser" Content="run LOB" Width="90" Height="20"  Click="btnCallHtml_Click" />
                <Button x:Name= "OobBrowser" Content="run OOB" Width="90" Height="20"  Click="RunBrowser_Click" />
            </StackPanel>
        </Grid>        
    </Grid>
</UserControl>
